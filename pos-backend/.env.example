# DM POS Backend Environment Configuration

# Development mode - allows test SNs to be loaded
NODE_ENV=development

# Allow test Serial Numbers for offline activation (development only)
ALLOW_TEST_SNS=true

# Emergency offline activation (production fallback)
# WARNING: Only enable this for critical business continuity scenarios
EMERGENCY_OFFLINE_SNS=false

# Railway activation server configuration
ACTIVATION_SERVER_URL=http://localhost:3001

# Database configuration (if using external DB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dmpos
DB_USER=root
DB_PASSWORD=

# Logging configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/activation.log

# Security settings
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Performance settings
MAX_RETRY_ATTEMPTS=3
CONNECTION_TIMEOUT=15000