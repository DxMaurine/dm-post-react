{
  "name": "dm-pos-retail",
  "oneClick": false,
  "private": true,
  "version": "1.5.5",
  "author": "dmpos.dev@gmail.com",
  "description": "A desktop application for managing sales, inventory, and customers in a retail environment.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"vite\" \"electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@zxing/library": "^0.21.3",
    "animate.css": "^4.1.1",
    "date-fns": "^4.1.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-barcode": "^1.6.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-number-format": "^5.4.4",
    "react-responsive-carousel": "^3.2.23",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "sweetalert2": "^11.22.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.3"
  },
  "build": {
    "appId": "com.piccacode.dm-pos-solution",
    "productName": "DM POS",
    "beforeBuild": "scripts/beforeBuild.js",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "pos-backend/",
        "to": "pos-backend/",
        "filter": [
          "**/*",
          "node_modules/**/*"
        ]
      },
      {
        "from": "pos-backend/node_modules/",
        "to": "pos-backend/node_modules/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
